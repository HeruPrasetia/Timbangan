{
  "name": "timbangan",
  "version": "3.0.3",
  "description": "Timbangan App",
  "main": "main.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/HeruPrasetia/Timbangan.git"
  },
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"bun run dev-react\" \"wait-on http://localhost:5173 && bun run start\"",
    "dev-react": "vite",
    "build": "bun run build-react && bun run buildwin",
    "build-react": "vite build --outDir dist-react",
    "buildwin": "electron-builder --win nsis --x64",
    "buildmac": "electron-builder build --mac",
    "rebuild": "electron-rebuild -f -w better-sqlite3"
  },
  "keywords": [],
  "author": "NaylaTools Software - heru.praseti@gmail.com - 081234779772",
  "license": "ISC",
  "type": "commonjs",
  "dependencies": {
    "better-sqlite3": "^11.5.0",
    "chart.js": "^4.5.1",
    "exceljs": "^4.4.0",
    "googleapis": "^169.0.0",
    "lucide-react": "^0.562.0",
    "react": "^19.2.3",
    "react-chartjs-2": "^5.3.1",
    "react-dom": "^19.2.3",
    "serialport": "^13.0.0"
  },
  "devDependencies": {
    "@electron/rebuild": "^3.6.0",
    "@vitejs/plugin-react": "^5.1.2",
    "concurrently": "^9.2.1",
    "electron": "^33.2.0",
    "electron-builder": "^24.13.3",
    "vite": "^7.3.0",
    "wait-on": "^9.0.3"
  },
  "build": {
    "appId": "com.naylatools.timbangan",
    "productName": "Timbangan",
    "directories": {
      "output": "dist"
    },
    "npmRebuild": true,
    "buildDependenciesFromSource": false,
    "icon": "react/assets/Logo.png",
    "asar": true,
    "asarUnpack": [
      "node_modules/better-sqlite3/build/Release/*.node",
      "node_modules/better-sqlite3/lib/*.js",
      "node_modules/serialport/**/*"
    ],
    "files": [
      "main.js",
      "preload.js",
      "index.html",
      "renderer.js",
      "package.json",
      "react/assets/**/*",
      "electron/**/*",
      "dist-react/**/*",
      "db.js",
      "splash.html",
      "surat_jalan.html",
      "designer.js",
      "designer.html",
      "designer.css",
      "print_renderer.html"
    ],
    "win": {
      "target": "nsis",
      "icon": "react/assets/Logo.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "shortcutName": "Timbangan"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "HeruPrasetia",
        "repo": "Timbangan"
      }
    ]
  }
}